node { 
    def app
    def tag = '${env.BUILD_NUMBER}'
    def dockerRegistry = 'https://mycluster.icp:8500'
    def image = 'devops/sumapp'
    def jenkinsCredentialRecordUserPassword = 'docker'
    def gitRepo = "https://github.com/rockoman71/SumApp.git"
    
    stage('Get Source') {
		   git gitRepo
	  }
    
    stage('Build Maven project') {
		  
		  sh "mvn -B clean package"
		  
	  }
    
    stage('Build image') {
        /* This builds the actual image; synonymous to
         * docker build on the command line */

        app = docker.build(image)
    } 
   
    stage('Build Docker image test') {
            docker.withRegistry(dockerRegistry,jenkinsCredentialRecordUserPassword) {
	          app.push(tag)
                  app.push("latest")
	    }
   }
}
