node { 
    def deployment = 'deployment/sumapp-deploy.yaml'
    def service = 'deployment/sumapp-svc.yaml'
    def namespace = 'devops'
  
  stage('git') {
		git gitRepo
	  }
  
    stage('Deploy container') {    
 			  sh "kc apply -n ${namespace} -f ${deployment}"
			  sh "sleep 5"
			  sh "kc apply -n ${namespace} -f ${service}"
   }
}
